@model GithubSharp.Core.Models.Issue
<div class="issue">
    <h5>
        @Model.Title
        <em>#@Model.Number</em></h5>
    <div>
        @Model.Body</div>
    <div>
        Created :
        @Model.CreatedAt
        , State :
        @Model.State
        @* == GithubSharp.Core.Models.IssueState.Closed ? "closed" : "open" *@</div>
    <div>
        Opened by <a href="@Html.Raw(Model.User.BrowsableUrl)">
            <img src="@Html.Raw(Model.User.GravatarUrl)" alt="Gravatar" />
            @Model.User.Login</a></div>
</div>
