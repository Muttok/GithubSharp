@model GithubSharp.MvcSample.MvcApplication.Models.ViewModels.BaseViewModel<System.String>
@section Title {
Create Repository
}
<h2>
    Create</h2>
@Html.ValidationSummary("Create was unsuccessful. Please correct the errors and try again.")
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Fields</legend>
        <p>
            <label for="RepositoryName">
                Name:</label>
            @Html.TextBox("RepositoryName")
            @Html.ValidationMessage("RepositoryName", "*")
        </p>
        <p>
            <label for="Description">
                Description:</label>
            @Html.TextArea("Description")
        </p>
        <p>
            <label for="HomePage">
                HomePage:</label>
            @Html.TextBox("HomePage")
        </p>
        <p>
            <label for="HomePage">
                Public:</label>
            @Html.CheckBox("Public")
        </p>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
